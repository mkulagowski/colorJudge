<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/learn_score"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:text="Score: 52" />

        <TextView
            android:id="@+id/learn_question"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:text='Which color is "..." ?' />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.85"
            android:useDefaultMargins="true">

            <ImageView
                android:id="@+id/starTL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.5"
                android:layout_gravity="center"
                android:layout_row="0"
                android:layout_column="0"
                android:visibility="invisible"
                android:translationZ="3dp"
                android:src="@android:drawable/btn_star_big_on"
                />

            <ImageView
                android:id="@+id/starTR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.5"
                android:layout_gravity="center"
                android:layout_row="0"
                android:layout_column="1"
                android:visibility="invisible"
                android:translationZ="3dp"
                android:src="@android:drawable/btn_star_big_on"
                />

            <ImageView
                android:id="@+id/starBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.5"
                android:layout_gravity="center"
                android:layout_row="1"
                android:layout_column="0"
                android:visibility="invisible"
                android:translationZ="3dp"
                android:src="@android:drawable/btn_star_big_on"
                />

            <ImageView
                android:id="@+id/starBR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.5"
                android:layout_gravity="center"
                android:layout_row="1"
                android:layout_column="1"
                android:visibility="invisible"
                android:translationZ="3dp"
                android:src="@android:drawable/btn_star_big_on"
                />

            <Button
                android:id="@+id/learnTL"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:gravity="center"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_column="0">
                </Button>



            <Button
                android:id="@+id/learnTR"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:gravity="center"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_column="1"/>

            <Button
                android:id="@+id/learnBL"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:gravity="center"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_column="0"/>

            <Button
                android:id="@+id/learnBR"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:gravity="center"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_column="1"/>

        </GridLayout>


    </LinearLayout>


</RelativeLayout>